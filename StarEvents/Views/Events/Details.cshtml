@section scripts {
    <script>
        // Seat data
        let seatData = {};
        @foreach (var sc in Model.SeatCategories)
        {
            <text>
            seatData[@sc.SeatCategoryId] = {
                price: @sc.Price,
                discounted: @(sc.DiscountedPrice.HasValue ? sc.DiscountedPrice.Value.ToString() : "null"),
                available: @sc.AvailableSeats,
                total: @sc.TotalSeats,
                label: '@(sc.DiscountLabel ?? "")',
                categoryName: '@sc.CategoryName'
            };
            </text>
        }

        // Dropdown functionality
        document.addEventListener('DOMContentLoaded', function() {
            const dropdownHeader = document.getElementById('dropdownHeader');
            const dropdownOptions = document.getElementById('dropdownOptions');
            const selectedSeatCategory = document.getElementById('selectedSeatCategory');
            const selectedOptionText = document.getElementById('selectedOptionText');

            // Toggle dropdown
            dropdownHeader.addEventListener('click', function() {
                dropdownOptions.classList.toggle('show');
                dropdownHeader.classList.toggle('active');
                document.querySelector('.dropdown-arrow').classList.toggle('active');
            });

            // Select option
            document.querySelectorAll('.dropdown-option').forEach(option => {
                option.addEventListener('click', function() {
                    const value = this.getAttribute('data-value');
                    const text = this.querySelector('.option-main').textContent;

                    selectedSeatCategory.value = value;
                    selectedOptionText.textContent = text;

                    // Close dropdown
                    dropdownOptions.classList.remove('show');
                    dropdownHeader.classList.remove('active');
                    document.querySelector('.dropdown-arrow').classList.remove('active');

                    // Update display
                    updateSeatDisplay();
                });
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!dropdownHeader.contains(event.target) && !dropdownOptions.contains(event.target)) {
                    dropdownOptions.classList.remove('show');
                    dropdownHeader.classList.remove('active');
                    document.querySelector('.dropdown-arrow').classList.remove('active');
                }
            });
        });

        // Update seat display function
        function updateSeatDisplay() {
            const selectedValue = document.getElementById('selectedSeatCategory').value;
            const quantity = parseInt(document.getElementById('quantity').value) || 1;

            if (!selectedValue || !seatData[selectedValue]) {
                document.getElementById('availableSeats').textContent = '-';
                document.getElementById('totalSeats').textContent = '-';
                document.getElementById('totalPrice').textContent = '0 LKR';
                document.getElementById('pricePerTicket').textContent = '0 LKR';
                document.getElementById('originalPrice').textContent = '';
                document.getElementById('discountInfo').style.display = 'none';
                document.getElementById('quantityDisplay').textContent = '0';
                return;
            }

            const data = seatData[selectedValue];
            document.getElementById('availableSeats').textContent = data.available;
            document.getElementById('totalSeats').textContent = data.total;
            document.getElementById('quantityDisplay').textContent = quantity;

            const useDiscount = data.discounted && data.discounted !== "null";
            const pricePerTicket = useDiscount ? parseFloat(data.discounted) : parseFloat(data.price);
            const originalPricePer = parseFloat(data.price);
            const total = pricePerTicket * quantity;

            document.getElementById('pricePerTicket').textContent = pricePerTicket.toLocaleString() + ' LKR';
            document.getElementById('totalPrice').textContent = total.toLocaleString() + ' LKR';

            if (useDiscount && pricePerTicket !== originalPricePer) {
                const originalTotal = originalPricePer * quantity;
                document.getElementById('originalPrice').textContent = originalTotal.toLocaleString() + ' LKR';
                document.getElementById('discountInfo').textContent = data.label;
                document.getElementById('discountInfo').style.display = 'block';
            } else {
                document.getElementById('originalPrice').textContent = '';
                document.getElementById('discountInfo').style.display = 'none';
            }
        }

        // Quantity control
        document.getElementById('increaseQty').addEventListener('click', function() {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value) || 1;
            if (currentValue < 10) {
                quantityInput.value = currentValue + 1;
                updateSeatDisplay();
            }
        });

        document.getElementById('decreaseQty').addEventListener('click', function() {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value) || 1;
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
                updateSeatDisplay();
            }
        });

        // Prevent booking if not logged in
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            const isLoggedIn = @((isLoggedIn).ToString().ToLower());
            if (!isLoggedIn) {
                e.preventDefault();
                window.location.href = '@Url.Action("Login", "Account", new { returnUrl = Request.RawUrl })';
            }
        });

        // Initialize
        updateSeatDisplay();

        document.getElementById('bookingForm').addEventListener('submit', function(e) {
    const isLoggedIn = @((isLoggedIn).ToString().ToLower());
    const selectedSeatCategory = document.getElementById('selectedSeatCategory').value;
    const seatError = document.getElementById('seatError');

    // Hide previous error
    seatError.style.display = "none";

    // Check seat category
    if (!selectedSeatCategory) {
        e.preventDefault();
        seatError.style.display = "block";
        return;
    }

    // Check login
    if (!isLoggedIn) {
        e.preventDefault();
        window.location.href = '@Url.Action("Login", "Account", new { returnUrl = Request.RawUrl })';
    }
});
    </script>
}