@{
    Layout = null;
    var organizationName = Session["OrganizationName"] ?? "Organization";
    var profilePhoto = Session["ProfilePhoto"] ?? Url.Content("~/Content/images/avatar-default.png");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@organizationName - StarEvents Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #1259f3;
            --primary-dark: #0d47c1;
            --primary-light: #e8efff;
            --secondary: #1a237e;
            --accent: #ff6b35;
            --success: #00c853;
            --warning: #ffab00;
            --danger: #ff3d00;
            --dark: #1a1d28;
            --dark-light: #2a2d3e;
            --gray: #6c757d;
            --gray-light: #f8f9fa;
            --gray-border: #e0e4f5;
            --white: #ffffff;
            --sidebar-width: 280px;
            --sidebar-collapsed: 80px;
            --header-height: 70px;
            --border-radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #f0f4ff 100%);
            color: #2d3748;
            line-height: 1.6;
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Layout Structure */
        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--dark) 0%, #151722 100%);
            color: var(--white);
            transition: var(--transition);
            position: fixed;
            height: 100vh;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .sidebar.collapsed {
            width: var(--sidebar-collapsed);
        }

        .sidebar-header {
            padding: 1.5rem 1.25rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            background: rgba(22, 22, 34, 0.95);
            min-height: 80px;
            flex-shrink: 0;
        }

        .logo {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: transparent;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .logo img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border-radius: 8px;
        }

        .brand-info {
            display: flex;
            flex-direction: column;
            transition: var(--transition);
            overflow: hidden;
            white-space: nowrap;
        }

        .sidebar.collapsed .brand-info {
            opacity: 0;
            width: 0;
            margin: 0;
        }

        .brand-text {
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--white);
            line-height: 1.2;
        }

        .org-name {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.7);
            margin-top: 0.25rem;
            line-height: 1.3;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem 0;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .nav-section {
            margin-bottom: 1.5rem;
        }

        .nav-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            padding: 0 1.25rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
            transition: var(--transition);
            white-space: nowrap;
            overflow: hidden;
        }

        .sidebar.collapsed .nav-label {
            opacity: 0;
            height: 0;
            margin: 0;
            padding: 0;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.85rem 1.25rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: var(--transition);
            position: relative;
            margin: 0.25rem 0.75rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
        }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--white);
            transform: translateX(5px);
        }

        .nav-item.active {
            background: var(--primary);
            color: var(--white);
            box-shadow: 0 4px 12px rgba(18, 89, 243, 0.3);
        }

        .nav-item.active::before {
            content: '';
            position: absolute;
            left: -8px;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 70%;
            background: var(--accent);
            border-radius: 2px;
        }

        .nav-icon {
            width: 20px;
            text-align: center;
            margin-right: 0.75rem;
            font-size: 1.1rem;
            opacity: 0.9;
            flex-shrink: 0;
            transition: var(--transition);
        }

        .sidebar.collapsed .nav-icon {
            margin-right: 0;
        }

        .nav-text {
            transition: var(--transition);
            white-space: nowrap;
            overflow: hidden;
        }

        .sidebar.collapsed .nav-text {
            opacity: 0;
            width: 0;
            margin: 0;
        }

        .nav-badge {
            background: var(--accent);
            color: var(--white);
            border-radius: 20px;
            padding: 0.2rem 0.5rem;
            font-size: 0.7rem;
            font-weight: 600;
            margin-left: auto;
            min-width: 20px;
            text-align: center;
            transition: var(--transition);
        }

        .sidebar.collapsed .nav-badge {
            opacity: 0;
            width: 0;
            padding: 0;
            margin: 0;
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            transition: var(--transition);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content.expanded {
            margin-left: var(--sidebar-collapsed);
        }

        /* Header Styles */
        .header {
            height: var(--header-height);
            background: var(--white);
            border-bottom: 1px solid var(--gray-border);
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 2rem;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .sidebar-toggle {
            background: none;
            border: none;
            color: var(--dark);
            font-size: 1.25rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
            transition: var(--transition);
        }

        .sidebar-toggle:hover {
            background: var(--primary-light);
            color: var(--primary);
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark);
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .action-btn {
            background: none;
            border: none;
            color: var(--gray);
            font-size: 1.1rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
            transition: var(--transition);
            position: relative;
        }

        .action-btn:hover {
            background: var(--primary-light);
            color: var(--primary);
        }

        .notification-badge {
            position: absolute;
            top: 5px;
            right: 5px;
            background: var(--danger);
            color: white;
            border-radius: 50%;
            width: 8px;
            height: 8px;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: var(--transition);
        }

        .user-profile:hover {
            background: var(--primary-light);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--gray-border);
        }

        .user-info {
            display: flex;
            flex-direction: column;
        }

        .user-name {
            font-weight: 600;
            color: var(--dark);
            font-size: 0.9rem;
        }

        .user-role {
            font-size: 0.75rem;
            color: var(--gray);
        }

        /* Content Area */
        .content {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }

        /* Dropdown Menu */
        .dropdown-menu {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 0.5rem;
            min-width: 200px;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            transition: var(--transition);
            color: var(--dark);
            text-decoration: none;
        }

        .dropdown-item:hover {
            background: var(--primary-light);
            color: var(--primary);
        }

        .dropdown-divider {
            margin: 0.5rem 0;
            border-color: var(--gray-border);
        }


        /* Scrollbar Styling */
        .sidebar-nav::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar-nav::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }

        .sidebar-nav::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 2px;
        }

        .sidebar-nav::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.3);
        }


        .content > * {
            animation: fadeIn 0.5s ease;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Overlay for mobile -->
        <div class="overlay" id="overlay"></div>

        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="@Url.Content("~/Content/logo-noBG.png")" alt="StarEvents Logo" />
                </div>
                <div class="brand-info">
                    <div class="brand-text">Star Events</div>
                    <div class="org-name">Event Management System</div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-label">Main</div>
                    <a href="@Url.Action("Dashboard", "Organizer")" class="nav-item active">
                        <i class="nav-icon fas fa-chart-pie"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                    <a href="@Url.Action("MyEvents", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-calendar-alt"></i>
                        <span class="nav-text">My Events</span>
                       
                    </a>
                    <a href="@Url.Action("CreateEvent", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-plus-circle"></i>
                        <span class="nav-text">Create Event</span>
                    </a>
                </div>

                <div class="nav-section">
                    <div class="nav-label">Management</div>
                    <a href="@Url.Action("Bookings", "OrganizerBookings")" class="nav-item">
                        <i class="nav-icon fas fa-ticket-alt"></i>
                        <span class="nav-text">Bookings</span>
                    </a>
                    <a href="@Url.Action("Reports", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-chart-line"></i>
                        <span class="nav-text">Reports & Analytics</span>
                    </a>
                    <a href="@Url.Action("Promotions", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-percent"></i>
                        <span class="nav-text">Promotions</span>
                    </a>
                </div>

                <div class="nav-section">
                    <div class="nav-label">Account</div>
                    @*<a href="@Url.Action("Notifications", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-bell"></i>
                        <span class="nav-text">Notifications</span>
                        
                    </a>*@
                    <a href="@Url.Action("Settings", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-cog"></i>
                        <span class="nav-text">Settings</span>
                    </a>
                    <a href="@Url.Action("Profile", "Organizer")" class="nav-item">
                        <i class="nav-icon fas fa-user"></i>
                        <span class="nav-text">My Profile</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content" id="mainContent">
            <!-- Header -->
            <header class="header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1 class="page-title" id="pageTitle">Dashboard Overview</h1>
                </div>

                <div class="header-right">
                    <div class="header-actions">
                        @*<button class="action-btn" title="Search">
                            <i class="fas fa-search"></i>
                        </button>
                        <button class="action-btn" title="Notifications">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge"></span>
                        </button>
                        <button class="action-btn" title="Messages">
                            <i class="fas fa-envelope"></i>
                            <span class="notification-badge"></span>
                        </button>*@
                    </div>

                    <div class="dropdown">
                        <div class="user-profile" id="userDropdown" data-bs-toggle="dropdown">
                            <img src="@profilePhoto" alt="Profile" class="user-avatar" />
                            <div class="user-info">
                                <span class="user-name">@organizationName</span>
                                <span class="user-role">Organizer</span>
                            </div>
                            <i class="fas fa-chevron-down" style="font-size: 0.8rem; color: var(--gray);"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Organizer")"><i class="fas fa-user me-2"></i>My Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Settings", "Organizer")"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Login")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script>
        // Sidebar functionality
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const overlay = document.getElementById('overlay');
        const brandInfo = document.querySelector('.brand-info');
        const navLabels = document.querySelectorAll('.nav-label');
        const navTexts = document.querySelectorAll('.nav-text');
        const navBadges = document.querySelectorAll('.nav-badge');

        // Toggle sidebar
        sidebarToggle.addEventListener('click', function () {
            if (window.innerWidth > 992) {
                // Desktop: toggle collapsed state
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');

                // Update toggle button icon
                const icon = this.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-bars';
                }
            } else {
                // Mobile: toggle visibility
                sidebar.classList.toggle('mobile-open');
                overlay.classList.toggle('active');
            }
        });

        // Close sidebar when clicking overlay on mobile
        overlay.addEventListener('click', function () {
            sidebar.classList.remove('mobile-open');
            overlay.classList.remove('active');
        });

        // Update active nav item
        document.addEventListener('DOMContentLoaded', function () {
            const currentPath = window.location.pathname.toLowerCase();
            const navItems = document.querySelectorAll('.nav-item');

            navItems.forEach(item => {
                const href = item.getAttribute('href').toLowerCase();
                if (currentPath.includes(href.split('/').pop())) {
                    // Remove active class from all items
                    navItems.forEach(i => i.classList.remove('active'));
                    // Add active class to current item
                    item.classList.add('active');

                    // Update page title
                    const pageTitle = document.getElementById('pageTitle');
                    const navText = item.querySelector('.nav-text').textContent;
                    pageTitle.textContent = navText;
                }
            });
        });

        // Handle window resize
        window.addEventListener('resize', function () {
            if (window.innerWidth > 992) {
                sidebar.classList.remove('mobile-open');
                overlay.classList.remove('active');
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>