    }
    .event-price-modern {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.14rem;
        font-weight: 800;
        color: #2563eb;
    }
    .event-upwards {
        color: #7b8499;
        font-size: 0.98rem;
        font-weight: 500;
    }
    .event-card-btn-modern {
        width: 100%;
        background: #2563eb;
        color: #fff;
        border: none;
        border-radius: 0 0 18px 18px;
        font-weight: 700;
        font-size: 1.11rem;
        padding: 17px 0 17px 0;
        text-align: center;
        text-decoration: none;
        transition: background .15s, box-shadow .16s;
        margin-top: auto;
        box-shadow: 0 2px 8px rgba(37,99,235,0.10);
        letter-spacing: 0.01em;
        cursor: pointer;
        display: block;
    }
    .event-card-btn-modern:hover, .event-card-btn-modern:focus {
        background: #1a48b9;
        color: #fff;
        text-decoration: none;
        box-shadow: 0 4px 18px rgba(37,99,235,0.16);
    }
</style>