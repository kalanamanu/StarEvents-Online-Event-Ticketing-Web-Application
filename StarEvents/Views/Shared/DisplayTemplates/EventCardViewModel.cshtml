        flex-direction: column;
        overflow: hidden;
        position: relative;
        transition: box-shadow .17s, transform .17s;
    }
    .event-card-modern:hover {
        box-shadow: 0 8px 32px rgba(18,89,243,0.15);
        transform: translateY(-3px) scale(1.012);
    }
    .event-card-img-wrap-modern {
        position: relative;
        width: 100%;
        aspect-ratio: 1 / 1;
        overflow: hidden;
        border-radius: 18px 18px 0 0;
        background: #f7f8fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .event-card-img-modern {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border-radius: inherit;
    }
    .event-category-badge-modern {
        position: absolute;
        top: 14px;
        left: 14px;
