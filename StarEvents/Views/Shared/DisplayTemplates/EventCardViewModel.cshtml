        display: flex;
        align-items: center;
        gap: 7px;
        box-shadow: 0 1.5px 7px rgba(37,99,235,0.15);
        z-index: 2;
    }
    .event-category-badge-modern i {
        color: #fff;
        font-size: 1.02em;
    }

    .promo-banner-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 12px 16px;
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.95) 0%, rgba(21, 128, 61, 0.95) 100%) !important;
        color: #fff;
        font-size: 1.05rem;
        font-weight: 700;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: 0 -4px 20px rgba(34, 197, 94, 0.3);
        cursor: pointer;
        z-index: 3;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .promo-banner-overlay:hover,
    .promo-banner-overlay:focus {
        background: linear-gradient(135deg, rgba(34, 197, 94, 1) 0%, rgba(21, 128, 61, 1) 100%) !important;
        transform: translateY(-2px);
        box-shadow: 0 -6px 25px rgba(34, 197, 94, 0.4);
    }

    .promo-banner-overlay:active {
        transform: translateY(0);
    }

    .promo-banner-overlay .promo-label-text {
        font-weight: 700;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .promo-banner-overlay .promo-popover-on-label {
        display: none;
        position: absolute;
        bottom: 105%;
        left: 50%;
        transform: translateX(-50%);
        min-width: 280px;
        background: #fff;
        color: #333;
        border-radius: 16px;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
        padding: 16px 0;
        z-index: 10;
        animation: slideUpFade 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid #e8e8e8;
    }

    .promo-banner-overlay:hover .promo-popover-on-label,
    .promo-banner-overlay:focus .promo-popover-on-label {
        display: block;
    }

    .promo-popover-on-label ul {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .promo-popover-on-label li {
        padding: 12px 20px;
        display: flex;
        align-items: flex-start;
        transition: background-color 0.2s ease;
    }

    .promo-popover-on-label li:hover {
        background-color: #f8f9fa;
    }

    .promo-offer-icon {
        margin-right: 12px;
        font-size: 1.1em;
        margin-top: 2px;
        flex-shrink: 0;
    }

    .promo-offer-label {
        font-weight: 700;
        color: #1f2937;
        font-size: 0.95rem;
    }

    .promo-offer-desc {
        color: #6b7280;
        margin-left: 8px;
        font-size: 0.92em;
        line-height: 1.4;
    }

    .promo-popover-on-label li:not(:last-child) {
        border-bottom: 1px solid #f1f1f1;
    }

    /* Add a subtle arrow to the popover */
    .promo-popover-on-label::after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 8px solid transparent;
        border-top-color: #fff;
    }

    .event-card-body-modern {
        padding: 30px 28px 0 28px;
        display: flex;
        flex-direction: column;
    }
    .event-card-title-modern {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        font-size: 1.18rem;
        color: #222c3d;
        margin-bottom: 8px;
        line-height: 1.2;
    }
    .event-card-meta-modern {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.99rem;
        color: #47506a;
        margin-bottom: 6px;
        font-weight: 500;
    }
    .meta-item i {
        margin-right: 3px;
        color: #a1a5b7;
        font-size: 1em;
    }
    .meta-sep {
        color: #bcc0c8;
        font-size: 1.1em;
    }
    .event-card-location-modern {
        font-size: 0.98rem;
        color: #6c747f;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 7px;
        font-weight: 400;
    }
    .event-card-desc-modern {
        color: #525d72;
        font-size: 0.99rem;
        margin-bottom: 14px;
        margin-top: 0;
    }
    .event-card-price-modern {
        font-size: 1.11rem;
        font-weight: 700;
        color: #2563eb;
        margin-bottom: 18px;
